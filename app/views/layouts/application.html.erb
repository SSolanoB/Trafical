<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |message_type, message| %>
      <div class="columns">
        <div class="column is-half">
<!--           <div  id="error_explanation" class="notification is-#{message_type}"> -->
          <div  id="error_explanation" class="notification is-<%= message_type = ('danger' if message_type == 'alert') || message_type %>">
            <button class="delete" aria-label="delete"></button>
            <%= content_tag(:p, message) %>
          </div>
        </div>
      </div>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
